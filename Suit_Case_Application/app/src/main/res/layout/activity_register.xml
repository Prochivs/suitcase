<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appback"
    tools:context=".screens.Register">



<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="100dp"-->
<!--        android:src="@drawable/"-->
<!--        android:contentDescription="TODO" />-->

    <LinearLayout
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
      android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Sign up"
            android:fontFamily="@font/forumregular"
            android:textColor="#cdba7e"
            android:textSize="34dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Email Address"
            android:textSize="18dp"
            android:fontFamily="@font/nunitoregular"
            android:textColor="#b5b5bd"
            />


        <EditText
            android:id="@+id/names"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:hint="Enter your full names here"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#b5b5bd"
            android:textColorHint="#8FB5B5BD" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Email Address"
            android:textSize="18dp"
            android:fontFamily="@font/nunitoregular"
            android:textColor="#b5b5bd"
            />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:hint="Please enter your email address"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#b5b5bd"
            android:textColorHint="#8FB5B5BD"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Username"
            android:textStyle="normal" android:textSize="18dp"
            android:fontFamily="@font/nunitoregular"
            android:textColor="#b5b5bd"
            />


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:hint="Please enter your username"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#b5b5bd"
            android:textColorHint="#8FB5B5BD" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Password"
            android:textSize="18dp"
            android:fontFamily="@font/nunitoregular"
            android:textColor="#b5b5bd"
            />


        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:hint="Please enter your new password"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#b5b5bd"
            android:textColorHint="#8FB5B5BD" />



        <Button
            android:id="@+id/signup_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonbg"
            android:fontFamily="@font/quicksandsemibold"
            android:text="Sign up"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#cdba7e" />





        <LinearLayout
            android:layout_below="@id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Don't have an Account?"
                android:textColor="#cdba7e"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/signin_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sign in"
                android:fontFamily="@font/quicksandsemibold"
                android:textColor="#b5b5bd"

                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="All rights reserved"

            android:textColor="#5E5E5E"
            android:textSize="16dp" />
    </LinearLayout>



</RelativeLayout>





