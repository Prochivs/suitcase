<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="9dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3f3f3f"
        android:background="#3f3f3f"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="110sp"
            app:cardCornerRadius="10dp"
            android:layout_height="95dp">
            <ImageView
                android:id="@+id/journalImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="4dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/journeyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Title"
                    android:fontFamily="@font/quicksandsemibold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#b5b5bd"
                    android:textSize="21dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/journeyDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="left"
                    android:hint="Date"
                    android:inputType="date"
                    android:textColor="#6A6A6A"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
               >

                <TextView
                    android:id="@+id/journeyDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:hint="Name jlf how afhd doing my name is android  studio i am dnfdfgk;dfefef"
                    android:textColor="#b5b5bd"
                    android:textSize="14dp" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>